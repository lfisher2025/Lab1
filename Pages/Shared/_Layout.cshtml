<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Lab1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Lab1.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Lab1</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Menu
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-page="/Admin/AdminHome">Admin</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-page="/Admin/AddBusinessPartner">Add Partner</a></li>
                                <li><a class="dropdown-item" asp-page="/Admin/AddUser">Add User</a></li>
                                <li><a class="dropdown-item" asp-page="/Admin/AdminViewProject">Projects</a></li>
                                <li><a class="dropdown-item" asp-page="/Admin/ManageBusinessPartners">Manage Partners</a></li>
                                <li><a class="dropdown-item" asp-page="/Admin/Meetings">Meetings</a></li>
                                <li><a class="dropdown-item" asp-page="/Admin/NewProject">Start a new project</a></li>
                                <li><a class="dropdown-item" asp-page="/BusinessPartners/BusinessPartnerHome">Business Partners</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-page="/Employee/EmployeeHome">Employees</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-page="/Employee/EmployeeViewProject">Projects</a></li>
                                <li><a class="dropdown-item" asp-page="/Faculty/FacultyHome">Faculty</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-page="/Faculty/AddGrant">Add Grant</a></li>
                                <li><a class="dropdown-item" asp-page="/Faculty/ViewGrant">View Grants</a></li>

                            </ul>
                        </li>
                    </ul>
                </div>
                <button type="button" class="btn btn-primary position-relative" onclick="location.href='/Messaging/Inbox'">
                    Inbox
                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                        55+
                        <span class="visually-hidden">unread messages</span>
                    </span>
                </button>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Lab1 - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>